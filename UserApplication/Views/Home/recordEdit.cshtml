@model UserApplication.ViewModels.RecordModel
@{
    ViewBag.Title = "recordEdit";
}

<h2>Record Edit</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("recordEdit", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(k => k.Id)

            @Html.LabelFor(k => k.Name)<br />
            @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.Name, null, new { @class = "text-danger" })

            <br />
            @Html.LabelFor(k => k.SurName)<br />
            @Html.TextBoxFor(k => k.SurName, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.SurName, null, new { @class = "text-danger" })

            <br />
            @Html.LabelFor(k => k.Email)<br />
            @Html.TextBoxFor(k => k.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.Email, null, new { @class = "text-danger" })

            <br />
            @Html.LabelFor(k => k.BirthDate)<br />
            @Html.TextBoxFor(k => k.BirthDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.BirthDate, null, new { @class = "text-danger" })

            <br />
            @Html.LabelFor(k => k.Phone)<br />
            @Html.TextBoxFor(k => k.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.Phone, null, new { @class = "text-danger" })

            <br />
            @Html.LabelFor(k => k.Location)<br />
            @Html.TextBoxFor(k => k.Location, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.Location, null, new { @class = "text-danger" })

            <br />
            <input type="submit" value="Update" class="btn btn-success" />
            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">@ViewBag.sonuc</div>
            }
        }

    </div>

